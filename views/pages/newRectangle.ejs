<!DOCTYPE html>
<html>
  <head>
    <%- include ("../partials/header.ejs") %>
    <title>Create New Rectangle</title>
  </head>

  <body>
    <div class="container">
      <form id="inputtedform" action="/addrectangle" method="post">
        <div class="field">
          <label for="rectangle_name">Name</label><br />
          <input type="text" name="name" id="inputtedname" required/>
        </div>
        <div class="field">
          <label for="rectangle_width">Width</label><br />
          <input
            type="number"
            min="0"
            max="1000"
            name="width"
            id="inputtedwidth"
            required
          />
        </div>
        <div class="field">
          <label for="rectangle_height">Height</label><br />
          <input
            type="number"
            min="0"
            max="1000"
            name="height"
            id="inputtedheight"
            required
          />
        </div>
        <div class="field">
          <label for="rectangle_color">Color</label><br />
          <select name="color" id="inputtedcolor">
            <option value="Red">Red</option>
            <option value="Green">Green</option>
            <option value="Orange">Orange</option>
            <option value="Yellow">Yellow</option>
            <option value="Black">Black</option>
            <option value="Pink">Pink</option>
            <option value="Blue">Blue</option>
            <option value="Purple">Purple</option>
          </select>
        </div>
        <div class="field">
          <label for="rectangle_border">Border</label><br />
          <select name="border" id="inputtedborder">
            <option value="Yes">Yes</option>
            <option value="No">No</option>
          </select>
        </div>
        <div class="field">
          <label for="rectangle_border_color">Border Color</label><br />
          <select name="borderColor" id="inputtedbordercolor">
            <option value="Red">Red</option>
            <option value="Green">Green</option>
            <option value="Orange">Orange</option>
            <option value="Yellow">Yellow</option>
            <option value="Black">Black</option>
            <option value="Pink">Pink</option>
            <option value="Blue">Blue</option>
            <option value="Purple">Purple</option>
          </select>
        </div>
        <div class="actions">
          <input type="submit" name="commit" id="valid" value="Create" />
          <a href="/rectangles">Go to main page</a>
        </div>
      </form>
    </div>
  </body>
</html>
